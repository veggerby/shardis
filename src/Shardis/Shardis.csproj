<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Shardis</PackageId>
    <Version>1.0.0</Version>
    <Authors>YourName</Authors>
    <Description>Shardis is a lightweight, domain-driven sharding framework for .NET applications.</Description>
    <PackageTags>sharding, .NET, framework</PackageTags>
    <RepositoryUrl>https://github.com/veggerby/shardis</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/veggerby/shardis</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <OutputPath>$(OutputPath)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.4" />
  </ItemGroup>

</Project>
